# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos(userId: ID): [Todo!]!
}

input CreateTodoInput {
  text: String!
  userId: String!
}

type CreateTodoPayload {
  todo: Todo!
}

type Mutation {
  createTodo(input: CreateTodoInput!): CreateTodoPayload!
}
